---
interface Props {
  title: string;
  date: Date;
  slug: string;
  tags: string[];
  executionScore?: number;
  excerpt?: string;
}

const { title, date, slug, tags, executionScore, excerpt } = Astro.props;

const baseUrl = import.meta.env.BASE_URL;
const formattedDate = date.toLocaleDateString('en-US', { 
  month: 'short', 
  day: 'numeric', 
  year: 'numeric' 
});
---

<article class="card card-hover animate-slide-up">
  <div class="flex flex-col md:flex-row md:items-start md:justify-between mb-3">
    <div class="flex-1">
      <h3 class="text-xl font-bold mb-2 hover:text-soft-indigo transition">
        <a href={`${baseUrl}/logs/${slug}/`}>{title}</a>
      </h3>
      <div class="flex items-center space-x-3 text-sm text-slate-400">
        <time datetime={date.toISOString()}>{formattedDate}</time>
        {executionScore !== undefined && (
          <span class="flex items-center space-x-1">
            <span class="text-sage">âš¡</span>
            <span>{executionScore}/10</span>
          </span>
        )}
      </div>
    </div>
  </div>

  {excerpt && (
    <p class="text-slate-300 mb-4 line-clamp-2">
      {excerpt}
    </p>
  )}

  {tags.length > 0 && (
    <div class="flex flex-wrap gap-2">
      {tags.map(tag => (
        <a href={`${baseUrl}/tags/${tag}/`} class="tag hover:bg-slate-600 transition">
          #{tag}
        </a>
      ))}
    </div>
  )}
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get all unique tags from logs
const allLogs = await getCollection('logs');
const tagCounts = allLogs.reduce((acc, log) => {
  log.data.tags.forEach(tag => {
    acc[tag] = (acc[tag] || 0) + 1;
  });
  return acc;
}, {} as Record<string, number>);

const sortedTags = Object.entries(tagCounts).sort((a, b) => b[1] - a[1]);

const baseUrl = import.meta.env.BASE_URL;
---

<BaseLayout title="Tags - Browse by Topic" description="Browse all bug bounty logs by tag and topic">
  <div class="container-custom py-12">
    <!-- Header -->
    <div class="mb-12">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">
        Browse by <span class="text-gradient">Tags</span>
      </h1>
      <p class="text-xl text-slate-300">
        Explore logs organized by vulnerability types, techniques, and topics.
      </p>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-12">
      <div class="card text-center">
        <div class="text-4xl font-bold text-soft-indigo mb-2">{sortedTags.length}</div>
        <div class="text-slate-400">Unique Tags</div>
      </div>
      <div class="card text-center">
        <div class="text-4xl font-bold text-sage mb-2">{allLogs.length}</div>
        <div class="text-slate-400">Tagged Logs</div>
      </div>
    </div>

    <!-- Tag Cloud -->
    {sortedTags.length > 0 ? (
      <div>
        <h2 class="text-2xl font-bold mb-6">All Tags</h2>
        <div class="card">
          <div class="flex flex-wrap gap-3">
            {sortedTags.map(([tag, count]) => {
              // Size tags based on frequency
              const sizeClass = count > 5 ? 'text-xl' : count > 2 ? 'text-lg' : 'text-base';
              
              return (
                <a 
                  href={`${baseUrl}/tags/${tag}/`}
                  class={`inline-flex items-center space-x-2 px-4 py-2 bg-charcoal border border-slate-600 rounded-lg hover:border-sage hover:bg-slate-700 transition-all ${sizeClass} font-medium`}
                >
                  <span class="text-soft-indigo">#{tag}</span>
                  <span class="text-xs text-slate-400 bg-slate-800 px-2 py-1 rounded-full">
                    {count}
                  </span>
                </a>
              );
            })}
          </div>
        </div>

        <!-- Tag List View -->
        <div class="mt-12">
          <h2 class="text-2xl font-bold mb-6">By Frequency</h2>
          <div class="space-y-3">
            {sortedTags.map(([tag, count]) => (
              <a href={`${baseUrl}/tags/${tag}/`} class="card card-hover flex items-center justify-between">
                <div class="flex items-center space-x-3">
                  <span class="text-soft-indigo text-lg font-semibold">#{tag}</span>
                  <div class="progress-bar w-32 md:w-48">
                    <div 
                      class="progress-fill" 
                      style={`width: ${(count / sortedTags[0][1]) * 100}%`}
                    ></div>
                  </div>
                </div>
                <span class="text-slate-400 font-medium">
                  {count} log{count !== 1 ? 's' : ''}
                </span>
              </a>
            ))}
          </div>
        </div>
      </div>
    ) : (
      <div class="card text-center py-16">
        <p class="text-slate-400 text-lg">No tags yet. Start tagging your logs!</p>
      </div>
    )}
  </div>
</BaseLayout>
